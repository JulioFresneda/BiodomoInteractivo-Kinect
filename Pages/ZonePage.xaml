<Page x:Class="Microsoft.Samples.Kinect.ControlsBasics.Pages.ZonePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Microsoft.Samples.Kinect.ControlsBasics.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZonePage">

    <Grid Margin="0,20,0,0" >


        <TextBlock x:Name="Titulo" Text="Titulo" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="0"/>

        <Button x:Name="Left" HorizontalAlignment="Left" Grid.Row="1" Height="75" Width="50" Click="LeftClick"/>
        <Button x:Name="Right" HorizontalAlignment="Right" Grid.Row="1" Height="75" Width="50" Click="RightClick"/>
        <Image x:Name="Especie" Height="400" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>

        <TextBox x:Name="Descripcion" VerticalAlignment="Bottom" Height="100" Width="1000" TextWrapping="Wrap" Grid.Row="1"/>

    </Grid>
</Page>
